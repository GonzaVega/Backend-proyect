<div class="col-md-8 offset-md-2">
  <p style="color: green"><%= notice %></p>
    <h1 style="text-align: center">Conferences listing</h1>
      <div class="text-center" >
        <div>
          <div style="padding: 1%">
          <%= link_to "New conference", new_conference_path, class:"btn btn-outline-success" %>
          </div>
        <%= form_tag search_conferences_path, method: :get do %>
          <div class="col-md-8 offset-md-2">
            <div class="input-group col-md-6 mt-4">
        <%=text_field_tag :search, params[:search], placeholder: "Sort conferences by title or room", class: "form-control" %>
        <div class="input-group-btn">
        <%=submit_tag "Search", class: "btn btn-info glyphicon glyphicon-search" %>
      </div>          
      </div>
      <% end %>
      </div>
      <hr class="col-md-8 offset-md-2">
      
      </div>
      
      <div id="conferences">
      <% @conferences.each do |conference| %>
        <%= render conference %>
        
        <% end %>
        </div>
     

  </div>
  


