<div class="col-md-6 offset-md-3" >

  <h2 class="text-center mt-4">Your search results:</h2>
  <div class="container">
<%@results.each do |result| %>
    <div class="row justify-content-md-center">
      <div class="col-md-10 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div 
          class="card-header font-italic" style="text-decoration: none">
          <h5 class="card-title" >
          <%= link_to result.username, user_path(result), method: :get, class: "nav-link" %>
        </h5>
          </div>
          <div class="col-md-6 offset-md-3">
          <div class="card-body">
            <p class="card-text"><%= pluralize(result.conferences.count, "conference") %></p>
            <div class="row">
            <nav class="navbar navbar-expand-lg navbar-light bg-light col-md-12 offset-sm-0" style="background-color: #fff">
          
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                <li class="nav-item", style='padding:1px'>
                <%= link_to "View profile", result, class: "btn btn-outline-success" %>
                </li>
                <li class="nav-item", style='padding:1px'>
                <%= link_to "Edit profile", edit_user_path(result), class: "btn btn-outline-info" %>
                </li>
                <li class="nav-item", style='padding:1px'>
                <%= button_to "Delete user", user_path(result), class: "btn btn-outline-danger", method: :delete, onclick: "return confirm('Are you sure? This will delete selected user's account and all related articles')" %>
                </li>
                </ul>
            </div>
            </nav>
           
           
           
            </div>
         </div>
        </div>
         <div class="card-footer text-muted">
            <small>Joined <%= time_ago_in_words(result.created_at) %> ago</small>
          </div>
        </div>
        <%= link_to '[ Return to Users listing ]', users_path, class: "text-info" %>
        </div>
    </div>
<% end %>  
</div>
  
</div>  