<div class="col-md-6 offset-md-2">
<h1 class="text-center mt-4">Speakers:</h1>
</div>
<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-md-6 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
         <%= link_to user.username, user, class: "btn btn-outline-link" %>            
          </div>
          <div class="card-body">
            <p class="card-text"><%= pluralize(user.conferences.count, "conference") %></p>
            <%= link_to "View profile", user, class: "btn btn-outline-success" %>
            <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-outline-info" %>
            <%= link_to "Delete profile", user_path(user), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
          </div>
          <div class="card-footer text-muted">
            <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>